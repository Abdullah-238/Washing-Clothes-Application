<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SheenProviderApp.LogInPages.pgSignIn"
             Title="Sign In"
             >

    <VerticalStackLayout VerticalOptions="Center" Padding="24"  Spacing="24">

        <Label Text="Log in"  Style="{StaticResource Headline}" HorizontalOptions="Start"/>
        <Label Text="Please enter your email and password to access your account"   />

        <Entry  Placeholder="E-mail"    MaxLength="50"  x:Name="enEmail" TextChanged="enEmail_TextChanged" />
        <Entry  Placeholder="Password"  IsPassword="True" MaxLength="50"  x:Name="enPassword" TextChanged="enEmail_TextChanged" />


        <Button Text="Sign in"   Clicked="btLogin_Clicked" x:Name="btLogin"  />

        <!--<Button Text="Create account"  Style="{StaticResource SecondaryButton}" Clicked="Button_Clicked"/>-->

        <!--<Button Text="Create account"  Style="{StaticResource SecondaryButton}" Clicked="Button_Clicked"/>-->

        <!--<Button Text="Reset Password" Style="{StaticResource ThirdButton}" Clicked="Button_Clicked_1" />-->

    </VerticalStackLayout>
</ContentPage>